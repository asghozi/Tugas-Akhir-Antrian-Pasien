<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nomor_antrian">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PUSKESMAS KOTA BATU"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

        <TextView
            android:id="@+id/tv_ruangperiksa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ruang Periksa Disini"
            android:textAlignment="center"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_nomorAntrian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textAlignment="center"
            android:textSize="80dp"/>

        <TextView
            android:id="@+id/tv_noKtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NIK Disini"
            android:textAlignment="center"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_namaPasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Nama Pasien Disini"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Hadir Pada : "
            android:textAlignment="center"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/tv_waktu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:text="Waktu Periksa Disini"
            android:textSize="20dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dinas Kesehatan Kota Batu"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>