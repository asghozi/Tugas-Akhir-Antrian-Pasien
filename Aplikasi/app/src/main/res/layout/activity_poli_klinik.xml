<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/poliklinik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Poli Klinik"
        android:textSize="45dp" />

    <Button
        android:id="@+id/polianak"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@+id/poliklinik"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="poli anak"
        android:textSize="20dp" />

    <Button
        android:id="@+id/poliumum"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@+id/polianak"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="poli umum"
        android:textSize="20dp" />

    <Button
        android:id="@+id/poligigi"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@+id/poliumum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="poli gigi"
        android:textSize="20dp" />

</RelativeLayout>